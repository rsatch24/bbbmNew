@model FAQPageModel
@using bbbm.DataModels;
@using bbbm.Entities;
@using bbbm.Enums;

<div class="faq-container">
    <div class="text-center header-color">
        @Html.Raw(Model.pageSections[(int)faq_enums.faq_title].SectionContent)
    </div>
