                <a class="btn btn-outline-primary custom-button" data-toggle="collapse" href="#NumClients" role="button" aria-expanded="false" aria-controls="NumClients">
                    <i class="fa fa-plus align-middle" aria-hidden="true"> </i>
                    @Html.Raw(Model.pageSections[(int)faq_enums.question_1].SectionContent)
                </a>
            </div>
        </p>
