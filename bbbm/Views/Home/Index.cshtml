@model HomePageModel
@using bbbm.DataModels;
@using bbbm.Entities;
@using bbbm.Enums;

@{
    ViewData["Title"] = "Home Page";
}

<div class="home-container-full">
    <div class="row home-btn-container pt-2">
        <button class="btn btn-xl rounded-pill btn-outline-primary" onclick="window.location.href='/Contact/Index'"> @Html.Raw(Model.pageSections[(int)Home_Section_Enums.contact_button].SectionContent)  </button>
    </div>
    <div class="row justify-content-center container-row pt-2">
           
        <div class="home-container">
            <div id="home-container-id" style="width: 100%;">
                <div class="header-color text-center">  @Html.Raw(Model.pageSections[(int)Home_Section_Enums.welcome_title].SectionContent) </div>
                <div class="divider div-transparent div-arrow-down mb-5"></div>
            </div>
            <div class="content-row-flex">
                <div class="col-flex welcome-image">
                    <img src="@Model.pageSections[(int)Home_Section_Enums.welcome_img].imgsrc" />
                </div>
                <div class="col-flex">
                    <div class="row-no-flex text-center">
                        @Html.Raw(Model.pageSections[(int)Home_Section_Enums.welcome_text].SectionContent)
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


<script type="text/javascript">
      $(window).scroll(function(){
        $('nav').toggleClass('scrolled', $(this).scrollTop() > 100);
        $('.nav-link').toggleClass('scrolled', $(this).scrollTop() > 100);
    });
</script>
